<?xml version="1.0" encoding="utf-8"?>
<!-- IM/2021/009 - Y.A.D.S.C.Basnayake -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgot_Password">


    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="410dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewBackground2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102"
        app:srcCompat="@drawable/bg_cake" />

    <ImageView
        android:id="@+id/imageViewBackground2"
        android:layout_width="391dp"
        android:layout_height="492dp"

        android:layout_gravity="center"
        android:layout_marginTop="370dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09"
        app:srcCompat="@drawable/white_rectangle" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="242dp"
        android:layout_height="156dp"
        android:layout_gravity="center"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="360dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageBackground"
        app:layout_constraintEnd_toEndOf="@+id/imageBackground"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textViewUnleash"
        android:layout_width="316dp"
        android:layout_height="87dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="210dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Unleash Your Inner Chef Explore, Create, and Savor"
        android:textAppearance="@style/explore_coo"
        app:layout_constraintBottom_toBottomOf="@+id/imageBackground"
        app:layout_constraintEnd_toEndOf="@+id/imageBackground"
        app:layout_constraintStart_toStartOf="@+id/imageBackground"
        app:layout_constraintTop_toTopOf="@+id/imageBackground" />


    <TextView
        android:id="@+id/textViewEvery"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="305dp"
        android:layout_marginBottom="184dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Every Bite!"
        android:textAppearance="@style/explore_coo"
        android:textColor="#FB8A22"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageBackground"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/imageBackground"
        app:layout_constraintVertical_bias="0.454" />

    <TextView
        android:id="@+id/textViewForgot"
        android:layout_width="277dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="379dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Forgot Password"
        android:textAppearance="@style/explore_coo"
        android:textColor="#2A3139"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackground2"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackground2"
        app:layout_constraintStart_toStartOf="@+id/imageViewBackground2"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackground2" />

    <TextView
        android:id="@+id/textViewNo"
        android:layout_width="355dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="486dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="No worries, we will send you reset instructions"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewBackground2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="294dp"
        android:layout_height="49dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="247dp"
        android:background="@drawable/border_edit_text"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="email"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackground2"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackground2"
        app:layout_constraintStart_toStartOf="@+id/imageViewBackground2"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackground2" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="297dp"
        android:layout_height="56dp"

        android:layout_marginStart="47dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="161dp"
        android:backgroundTint="#FB8A22"
        android:fontFamily="@font/poppins_semibold"
        android:text="Send"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackground2"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackground2"
        app:layout_constraintStart_toStartOf="@+id/imageViewBackground2"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackground2" />

    <TextView
        android:id="@+id/textViewBack"
        android:layout_width="174dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="365dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="84dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Back to login in"
        android:textAppearance="@style/explore_coo"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackground2"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackground2"
        app:layout_constraintStart_toStartOf="@+id/imageViewBackground2"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackground2" />

    <ImageView
        android:id="@+id/imageViewArrow"
        android:layout_width="52dp"
        android:layout_height="45dp"
        android:layout_marginTop="362dp"
        android:layout_marginEnd="266dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackground2"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackground2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackground2"
        app:srcCompat="@drawable/arrow" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="75dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
